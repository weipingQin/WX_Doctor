<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/myinfo_myinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:id="@+id/myinfo_myinfo_old_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="原密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/myinfo_modify_password_oldpassword"
            android:layout_toRightOf="@id/myinfo_myinfo_old_password"
            android:inputType="textPassword"
            android:layout_width="165dp"
            android:layout_height="48dp"
            android:hint="请输入原密码"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/wode_arrow"
            android:layout_centerVertical="true"
            android:paddingRight="15dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/text_grey"/>

    <RelativeLayout
        android:id="@+id/myinfo_myinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:id="@+id/myinfo_modify_password_newpassword_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新密码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/myinfo_modify_password_newpassword"
            android:inputType="textPassword"
            android:layout_width="165dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/myinfo_modify_password_newpassword_textview"
            android:hint="请输入新密码"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/wode_arrow"
            android:layout_centerVertical="true"
            android:paddingRight="15dp" />
    </RelativeLayout>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/text_grey"/>

    <RelativeLayout
        android:id="@+id/myinfo_myinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:id="@+id/myinfo_modify_password_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码确认"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/myinfo_modify_password_confirmpassword"
            android:layout_toRightOf="@id/myinfo_modify_password_password_confirm"
            android:inputType="textPassword"
            android:layout_width="165dp"
            android:layout_height="48dp"
            android:hint="密码确认"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/wode_arrow"
            android:layout_centerVertical="true"
            android:paddingRight="15dp" />
    </RelativeLayout>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/text_grey"/>

    <TextView
        android:id="@+id/myinfo_modify_password_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="55dp"
        android:text="确认并修改"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@color/actionbar_bg" >
    </TextView>

</LinearLayout>