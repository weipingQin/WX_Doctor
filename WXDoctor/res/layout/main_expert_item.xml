<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <com.common.image.SmartImageView
        android:id="@+id/main_list_item_header_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/main_list_expert_image" >
    </com.common.image.SmartImageView>

    <TextView
        android:id="@+id/main_expert_list_header_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/main_list_item_header_imageview"
        android:text="王学文"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/main_list_item_doctortitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_expert_list_header_username_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/main_list_item_header_imageview"
        android:text="主治医师"
        android:textColor="@color/text_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/main_expert_doctor_info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_list_item_doctortitle_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/main_list_item_header_imageview"
        android:text="浙江省人民医院"
        android:textColor="@color/text_grey"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/main_expert_doctor_info_textview"
        android:layout_marginTop="5dp"
        android:background="@color/text_grey" />

</RelativeLayout>