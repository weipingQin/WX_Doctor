<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- actionbar样式 -->
    <style name="Theme.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="background">@color/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
    </style>

    <!-- actionbar字体样式 -->
    <style name="Theme.ActionBar.TitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.ActionMenuTextAppearance" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- 弹出menu list样式 -->
    <style name="Theme.DropDownListView" parent="Widget.Sherlock.ListView.DropDown">
        <item name="android:divider">@drawable/index_dropmenu_line</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>

    <!-- menu弹出背景 -->
    <style name="Theme.PopupMenu" parent="Widget.Sherlock.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/dropmenu_bg</item>
    </style>

    <!-- 弹出menu list item样式 -->
    <style name="Theme.DropDownItemStyle" parent="TextAppearance.Sherlock.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">17sp</item>
    </style>
    <!-- @drawable/abs__ab_solid_shadow_holo -->
    <style name="Theme.AppTheme" parent="Theme.Sherlock.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowContentOverlay">@null</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_press_selector</item>
        <item name="actionBarItemBackground">@drawable/action_bar_press_selector</item>
        <item name="actionModeBackground">@drawable/action_bar_press_selector</item>
        <item name="android:actionModeBackground">@drawable/action_bar_press_selector</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Theme.DropDownListView</item>
        <item name="dropDownListViewStyle">@style/Theme.DropDownListView</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Theme.DropDownItemStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/Theme.DropDownItemStyle</item>
        <item name="android:homeAsUpIndicator">@android:color/transparent</item>
        <item name="homeAsUpIndicator">@android:color/transparent</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="actionBarDivider">@null</item>
        <item name="android:actionMenuTextAppearance">@style/Theme.ActionMenuTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/Theme.ActionMenuTextAppearance</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>